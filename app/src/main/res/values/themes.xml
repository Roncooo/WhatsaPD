<resources>
    <!-- Base application theme. -->
    <style name="Theme.WhatsaPD" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/unipd_red_500</item>
        <item name="colorPrimaryVariant">@color/unipd_red_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/unipd_coral_200</item>
        <item name="colorSecondaryVariant">@color/unipd_coral_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.WhatsaPD.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WhatsaPD.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WhatsaPD.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
