<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".ui.poi.PoiFragment">

    <!-- layout_height is set to match_parent and not wrap_content because wrap_content could
     create problems with the WebView. For this reason ignore="ScrollViewSize" is added. -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="ScrollViewSize">

        <TextView
            android:id="@+id/poi_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/poi_name"
            android:textSize="@dimen/fragment_poi_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <!-- ContentDescription is queried by the database and added via code -->
        <ImageView
            android:id="@+id/poi_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            tools:ignore="ContentDescription" />

        <include
            android:id="@+id/accessibility_banner"
            layout="@layout/accessibility_banner" />

        <WebView
            android:id="@+id/poi_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <include
            android:id="@+id/reviews_layout"
            layout="@layout/reviews_layout" />

    </LinearLayout>

</ScrollView>
